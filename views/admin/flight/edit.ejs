<!-- Begin Page Content -->
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <%= heading %>
        </h1>
    </div>

    <!-- Content Row -->
    <div class="row">
        <div class="col-lg-6 mb-4 ">
            <%- include('../../partials/messages'); %>


                <form method="POST" action="/admin/flight/update">

                    <div class="form-group">
                        <input type="text" class="form-control" name="image" id="imageToUpload"" hidden/>
                    <input type=" text" class="form-control" name="oldimage" value="<%= data.image %>" hidden />
                        <input type="text" class="form-control" name="id" value="<%= data._id %>" hidden />
                    </div>

                    <div class="form-group">
                        <label for="airline">airline</label>
                        <select class="form-control" id="airline" name="airline">
                            <% airline.forEach(function(c){ %>
                                <% if(c.name==data.airline.name){%>
                                    <option value="<%= c._id %>" selected>
                                        <%= c.name %>
                                    </option>
                                    <% } %>

                                        <% if(c.name!=data.airline.name){%>
                                            <option value="<%= c._id %>">
                                                <%= c.name %>
                                            </option>
                                            <% } %>
                                                <% }); %>
                        </select>
                    </div>


                    <div class="form-group">
                        <label for="departure">departure</label>
                        <input type="text" class="form-control" name="departure" id="departure"
                            value="<%= data.departure %>" disabled />
                    </div>

                    <div class="form-group">
                        <label for="arrival">arrival</label>
                        <input type="text" class="form-control" name="arrival" id="arrival" value="<%= data.arrival %>"
                            disabled />
                    </div>


                    <div class="form-group">
                        <label for="seats">Total passanger seats</label>
                        <input type="number" class="form-control" name="seats" value="<%= data.available_seats %>">
                    </div>
                    <div class="form-group">
                        <label for="price">Price per seat</label>
                        <input type="number" class="form-control" name="price" value="<%= data.price %>">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
        </div>
        <div class="col-lg-5">
            <div class="card">
                <div class="card-block">
                    <center class="m-t-30">
                        <img src="/assets/image/uploads/<%= data.airline.image %>" id="display_selected_image"
                            style="width: 150px;" />
                        <h4 class="card-title m-t-10">Logo</h4>
                    </center>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<script>
    $("#nav-flight").addClass("active");
</script>
