<!-- Begin Page Content -->
<div class="container-fluid">


    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary float-left">
                <%= heading %>
            </h6>

            <a href="/admin/hotel/bookings" class="btn btn-success float-right"> View Bookings </a>
        </div>
        <div class="card-body">
            <%- include('../../partials/messages'); %>

                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Hotel Image</th>
                                <th>Location</th>
                                <th>Description</th>
                                <th>Stars</th>
                                <th>Price/room</th>
                                <th>Total room</th>
                                <th>Available room</th>
                                <th>Added On</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Id</th>
                                <th>Name</th>
                                <th>Hotel Image</th>
                                <th>Location</th>
                                <th>Description</th>
                                <th>Stars</th>
                                <th>Price/room</th>
                                <th>Total room</th>
                                <th>Available room</th>
                                <th>Added On</th>
                                <th>Actions</th>
                            </tr>
                        </tfoot>
                        <tbody>
                            <tr>
                                <% var counter=1; %>
                                    <% data.forEach(function(d){ %>
                            <tr>
                                <td>
                                    <%= counter %>
                                </td>
                                <td>
                                    <%= d.name %>
                                </td>
                                <td><img src="/assets/image/uploads/o_<%= d.image %>" width="200px" alt=""></td>
                                <td>
                                    <%= d.location.location %>
                                </td>
                                <td>
                                    <%= d.description %>
                                </td>
                                <td>
                                    <%= d.stars %>
                                </td>
                                <td>
                                    <%= d.price %>
                                </td>
                                <td>
                                    <%= d.room %>
                                </td>
                                <td>
                                    <%= d.available_room %>
                                </td>

                                <td>
                                    <%= d.addedOn %>
                                </td>
                                <td>
                                    <form action="/admin/hotel/delete" method="POST">
                                        <a href="/admin/hotel/edit/<%= d._id %>" class="btn btn-warning"><i
                                                class="fas fa-edit"></i></a>
                                        <input type="text" name="image_name" value="<%= d.image %>" hidden />
                                        <button class="btn btn-danger" value="<%= d._id %>" name="e_id"><i
                                                class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% counter++; %>
                                <% }); %>
                        </tbody>
                    </table>
                </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
<script>
    $("#nav-hotel").addClass("active");
</script>
